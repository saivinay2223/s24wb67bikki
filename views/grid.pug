// grid.pug
extends layout
block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
  - var rows = Number(query.rows)
  - var cols = Number(query.cols)
  - if !Number.isInteger(rows) || !Number.isInteger(cols)
    p Invalid rows or columns input. Please enter valid numbers.
  - else if rows < 3 || rows > 13
    p Rows must be between 3 and 13.
  - else if cols < 3 || cols > 13
    p Columns must be between 3 and 13.
  - else
    table#outer
      - for (let i = 0; i < rows; i++) {
        tr#middle
          - for (let j = 0; j < cols; j++) {
            td= i * i + j
          }
      }
